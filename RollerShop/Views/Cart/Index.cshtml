@model RollerShop.Models.CartIndexViewModel

@{ 
    ViewBag.Title = "Sklep rolkowy: Twój koszyk";
}

<h2>Twój koszyk</h2>
<table class="table">
    <thead>
        <tr>
            <th>Ilość</th>
            <th>Produkt</th>
            <th>Cena</th>
            <th>Wartość</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var line in Model.Cart.Lines)
        {
            <tr>
                <td>@line.Quantity</td>
                <td>@line.Product.Name</td>
                <td>@line.Product.Price.ToString("c")</td>
                <td>@((line.Quantity * line.Product.Price).ToString("c"))</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td>Razem:</td>
            <td>@Model.Cart.ComputeTotalValue().ToString("c")</td>
        </tr>
    </tfoot>
</table>
<div>
    <a href="@Model.ReturnUrl">Kontynuuj zakupy</a>
</div>